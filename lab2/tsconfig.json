{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./src/main/webapp/resources/js",
    "rootDir": "./src/main/webapp/resources/ts",
    "sourceMap": true
  },
  "include": [
    "src/main/webapp/resources/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "target"
  ]
}