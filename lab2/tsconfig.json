{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": [
    "src/main/webapp/resources/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "target",
    "src/main/webapp/resources/js"
  ]
}